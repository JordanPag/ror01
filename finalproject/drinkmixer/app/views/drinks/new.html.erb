<h1>New Drink</h1>

<ul>
  <% for message in @drinks.errors.full_messages %>
  <font color="red"><li><%= message %></li></font>
  <% end %>
</ul>

<%= form_for(@drinks) do |form| %>
  <p>
    <%= form.label(:name) %><br>
    <%= form.text_field(:name) %><br>
  </p>
  <p>
    <%= form.label(:creator) %><br>
    <%= form.text_field(:creator) %><br>
  </p>
  <p>
    <% for drink in @all %>
    <%= check_box_tag(:parent ,drink %>
    <% end %>
  </p>
  <%= form.hidden_field(:default) %>
  <%= form.submit("Create Drink") %>
<% end %>
